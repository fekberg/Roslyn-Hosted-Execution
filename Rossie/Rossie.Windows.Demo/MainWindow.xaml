<Window x:Class="Rossie.Windows.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rossie Demo" Height="394" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="10" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="2" Content="Execute" Height="23" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Click="Execute_Click" />
        <TextBox Grid.Column="0"  Name="InputCode" TextWrapping="Wrap" Text="var x = 10; return x;" Margin="0,25,0,30" />
        <Label Grid.Column="0" Content="Enter some code that you want to execute:" Height="28" VerticalAlignment="Top" />
        <Label Grid.Column="2"  Content="Result:" Height="28" VerticalAlignment="Top" />
        <TextBox Grid.Column="2" Name="ResultView" TextWrapping="Wrap" Margin="0,25,0,30"  />
    </Grid>
</Window>
